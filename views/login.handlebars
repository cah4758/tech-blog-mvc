<h2>Login</h2>

<form class="login-form">
  <div class="mb-3">
    <label for="email-login" class="form-label">Email address</label>
    <input type="email" class="form-control" id="email-login" aria-describedby="emailHelp">
    <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
  </div>
  <div class="mb-3">
    <label for="password-login" class="form-label">Password</label>
    <input type="password" class="form-control" id="password-login">
  </div>
  <button type="submit" class="btn btn-success">Login</button>
</form>
<br>
<div class="register-btn">
  <button type="button" class="btn btn-warning">New User Registration</button>
</div>

<script src="/js/login.js"></script>
