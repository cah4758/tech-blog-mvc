{{!-- Showing all blog posts that have been created --}}

{{#each posts as |post| }}
<div class="row align-center mb-5">
  <div class="col-md-6">
    <h2>{{{title}}}</h2>
    <h3>Created by: {{{user_name}}}</h3>
    <h3>on {{{date_created}}}</h3>
  </div>
  <div class="col-md-6">
    <h3>{{{blog_text}}}</h3>
  </div>
</div>
{{/each}}
